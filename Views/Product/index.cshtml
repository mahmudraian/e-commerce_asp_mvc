@model IEnumerable<e_commerce.Models.Product>
@{
    ViewBag.Title = "index";
}



<h2>Product</h2>

<div class="table-responsive">
    <table class="table table-hover">



        <thead>
            <a style="float:right;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Stock</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ProductId</th>
                        <td>@item.ProductName</td>
                        <td>@item.ProductDescription</td>
                        <td>@item.ProductCount</td>
                        <td>@item.ProductQuantity</td>
                        <td>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                        </td>



                    </tr>
                }
            }
        </tbody>
    </table>
</div>