@model IEnumerable<e_commerce.Models.Category>
@{
    ViewBag.Title = @ViewBag.Title;

}

<script>
    function createCategory() {
        console.log("clicked");
        $("#fromCreateCategory").dialog({
            resizable: false,
            height: 500, // or auto, whichever is preferred
            width: 400,
            modal: true,
        });

    }



</script>



<h2>@ViewBag.Msz</h2>

<div class="table-responsive">
    <button class="btn btn-primary" onclick='return createCategory()' style="float:right;">+</button>
    <table class="table table-hover">



        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Stock</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.thumb</td>
                        <td>@item.created_at</td>
                        <td>@item.updated_at</td>
                        <td>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                        </td>



                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@Html.Partial("~/Views/Shared/_createCatgeory_from.cshtml")
