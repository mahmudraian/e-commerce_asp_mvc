@model IEnumerable<e_commerce.Models.Category>
@{
    ViewBag.Title = @ViewBag.Title;

}



<h2>@ViewBag.Msz</h2>

<div class="table-responsive">
    <table class="table table-hover">



        <thead>
            <a style="float:right;" class="btn btn-outline-primary" href="@Url.Action("create","Category")">Add</a>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Quantity</th>
                <th scope="col">Stock</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.thumb</td>
                        <td>@item.created_at</td>
                        <td>@item.updated_at</td>
                        <td>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                            <a style="text-align:end;" class="btn btn-outline-primary" href="@Url.Action("create","Product")">Add</a>
                        </td>



                    </tr>
                }
            }
        </tbody>
    </table>
</div>